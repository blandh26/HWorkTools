<Window x:Class="H_WorkTools.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:H_WorkTools"
		xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
		mc:Ignorable="d"
		ResizeMode="CanMinimize"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing"
        StateChanged="MainWindow_StateChanged"
		Title="HWorkTools" Height="710" Width="440">
    <md:DialogHost Identifier="Root">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <md:ColorZone Mode="PrimaryMid"  Grid.Row="0"  Height="36" PreviewMouseMove="Border_OnMouseLeftButtonDown">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="55"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Source="/Resources/hworktools.ico" Grid.Row="0" Grid.Column="0" Height="24" Width="24" HorizontalAlignment="Left" Margin="12,5,5,5"/>
                        <TextBlock x:Name="txtTitle" Text="123" Padding="5" FontSize="14" Grid.Row="0" Grid.Column="1" Margin="0,5,0,0"/>
                        <ToggleButton Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" x:Name="BtnTopMost" Click="BtnTopMost_Click"  Margin="0,0,0,0"
                                      Height="30" Width="30" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="置顶" HorizontalAlignment="Right"
                                      Content="{md:PackIcon Kind=Pin}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=PinOff,Size=20}" Cursor="Hand" />
                        <md:PackIcon Grid.Row="0" Grid.Column="3" Width="24" Height="24" Kind="WindowMinimize" HorizontalAlignment="Right" Margin="12,5,5,5" MouseDown="Minimize_Click"/>
                        <md:PackIcon Grid.Row="0" Grid.Column="4" Width="24" Height="24" Kind="WindowClose" HorizontalAlignment="Right" Margin="12,5,17,5" MouseDown="Close_Click"/>
                    </Grid>
                </StackPanel>
            </md:ColorZone>
            <md:Card Grid.Row="1">
                <TabControl SnapsToDevicePixels="True" Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="Left" >
                    <!--应用-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Apps" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12" >
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="应用中心" />
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="txtApp" Text="" MaxLength="30" TextChanged="txtApp_TextChanged"/>
                                <ToggleButton Grid.Row="0" Grid.Column="3" Command="{Binding UpdateCommand}" CommandParameter="{Binding ElementName=cbIp, Path=Text}" Height="40" Width="40" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="监听" Content="{md:PackIcon Kind=Plus}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=Plus}" Cursor="Hand" />
                                <ToggleButton Grid.Row="0" Grid.Column="5" x:Name="BtnExeDelete" Click="BtnExeDelete_Click" Height="40" Width="40" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="删除" Content="{md:PackIcon Kind=DeleteEmptyOutline}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=DeleteOffOutline}" Cursor="Hand" />
                                <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" x:Name="LvExe" Height="540" Margin="0,20,0,0" AllowDrop="True" 
                                          PreviewMouseMove="LvExe_OnPreviewMouseMove" Drop="LvExe_OnDrop"
                                          Background ="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="10" Width="36" Height="36">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" ></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Image ToolTip="{Binding title}" Source="{Binding ico}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="36" Height="36" MouseDown="Image_OnMouseDown"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListView>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <!--应用-结束-->
                    <!--局域网共享桌面-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Laptop" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="共享桌面" />
                            <md:Card>
                                <TabControl Style="{StaticResource MaterialDesignFilledTabControl}">
                                    <TabItem Header="共享">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <!--停止共享-->
                                            <Label Grid.Row="0" Grid.Column="0" Content="NiceName" Margin="10,10,0,0"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtNiceName" md:HintAssist.Hint="NiceName" Text="" Margin="0,10,10,0"/>
                                            <Label Grid.Row="1" Grid.Column="0" Content="本地IP" Margin="10,10,0,0"/>
                                            <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="cbIp" DisplayMemberPath="IP" SelectedValuePath="id" IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}" Margin="0,0,10,0"/>
                                            <Label Grid.Row="2" Grid.Column="0" Content="密码"  Margin="10,10,0,0"/>
                                            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtRdpKey" md:HintAssist.Hint="Password" MaxLength="4" Text="" Margin="0,0,10,0"/>
                                            <Label Grid.Row="3" Grid.Column="0" Content="模式" Margin="10,10,0,0"/>
                                            <RadioButton Grid.Row="3" Grid.Column="1" x:Name="rbMode1" Content="共享" Style="{StaticResource MaterialDesignRadioButton}" IsChecked="True" Margin="0,10,0,0"/>
                                            <RadioButton Grid.Row="3" Grid.Column="3" x:Name="rbMode2" Content="控制" Style="{StaticResource MaterialDesignRadioButton}" Margin="0,10,0,0"/>
                                            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" Width="80" Content="共享" x:Name="BtnDeskShare" Click="BtnDeskShare_Click" FontSize="14" Cursor="Hand" Margin="0,10,0,0"/>
                                            <TextBlock  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="5" TextWrapping="Wrap" Margin="10,10,10,10">quiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA</TextBlock>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="加入或求助">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Content="IP"  Margin="10,10,0,0"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtIp" md:HintAssist.Hint="IP" Text="192.168.3.132" Margin="0,10,10,0"/>
                                            <Label Grid.Row="1" Grid.Column="0" Content="密码"  Margin="10,10,0,0"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtRdpPswKey" md:HintAssist.Hint="Password" MaxLength="4" Text="" Margin="0,0,10,0"/>
                                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Width="80" Content="加入" x:Name="BtnDeskShareJoin" Click="BtnDeskShareJoin_Click" FontSize="14" Cursor="Hand" Margin="0,10,0,0"/>
                                            <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Width="80" Content="求助" x:Name="BtnDeskShareInvite" Click="BtnDeskShareInvite_Click" FontSize="14" Cursor="Hand" Margin="0,10,0,0"/>
                                            <TextBlock  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" TextWrapping="Wrap" Margin="10,10,10,10">quiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA</TextBlock>
                                        </Grid>
                                    </TabItem>
                                </TabControl>
                            </md:Card>
                            <GroupBox Header="观众列表" Margin="0,12,0,0">
                                <ListView x:Name="LvAudience" Height="250" ></ListView>
                            </GroupBox>
                        </StackPanel>
                    </TabItem>
                    <!--局域网共享桌面-结束-->
                    <!--端口-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Airport" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="端口工具" />
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Grid.Column="0" x:Name="txtPort" Text="" MaxLength="8" md:HintAssist.Hint="Port"/>
                                <Button Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Width="80" Content="查询" x:Name="BtnPortSelect" Click="BtnPortSelect_Click" FontSize="14" Cursor="Hand"/>
                                <Button Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Width="80" Content="杀掉" x:Name="BtnPortKill" Click="BtnPortKill_Click" FontSize="14" Cursor="Hand"/>
                                <ListView  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" x:Name="LvPort" Height="530" Margin="0,27,0,0"></ListView>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <!--端口-结束-->
                    <!--闹钟-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Alarm" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="提醒工具" />
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                </Grid.RowDefinitions>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <!--闹钟-结束-->
                    <!--录屏-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="VideoVintage" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="截图、录屏" />
                            <!--截图录屏废弃-开始-->
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft" Height="40"></RowDefinition>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--录屏设置-->
                                <Label Grid.Row="0" Grid.Column="0" Content="生产路径:" Margin="0,10,0,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtPath" md:HintAssist.Hint="Path" Text="" Height="25" Margin="0,10,0,0" VerticalAlignment="Top"/>
                                <Button Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Click="ScreenRecording_Path_Click" Content="{md:PackIcon FolderOutline,Size=20}" ToolTip="设置路径" Margin="10,0,0,0"/>
                                <Button Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="1" Click="ScreenRecording_Open_Click" Content="{md:PackIcon FolderOpenOutline,Size=20}" ToolTip="打开目录" Margin="10,0,0,0" Cursor="Hand"/>

                                <!--开始停止录屏-->
                                <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource btn_Language_label}" Grid.ColumnSpan="2" />
                                <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="cbAudio" IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"/>
                                <Button Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1" Click="ScreenRecording_Refresh_Click" Content="{md:PackIcon Refresh,Size=20}" ToolTip="刷新" Margin="10,0,0,0"/>

                                <Label Grid.Row="2" Grid.Column="0" Content="录制时间:" Margin="0,20,0,0"/>
                                <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="LabMins" Content="00 : 00 : 00 s" Margin="0,15,0,10" FontSize="18"/>
                                <ToggleButton Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" x:Name="BtnScreenRecordingVideo" Click="ScreenRecording_Video_Click" Height="40" Width="40" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="录屏" Content="{md:PackIcon Kind=Video}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=Stop,Size=20}" Cursor="Hand" />

                                <!--输出内容-->
                                <ScrollViewer Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Height="470" x:Name="VideoScrollViewer">
                                    <TextBlock  TextWrapping="Wrap" x:Name="txtVideo" ></TextBlock>
                                </ScrollViewer>
                            </Grid>
                            <!--截图录屏废弃-结束-->
                        </StackPanel>
                    </TabItem>
                    <!--录屏-结束-->
                    <!--剪贴板-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="ContentPaste" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="粘贴助手" />
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                    <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                </Grid.RowDefinitions>
                                <ToggleButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" x:Name="BtnClipboard" Click="BtnClipboard_Click" Height="40" Width="40" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="监听" Content="{md:PackIcon Kind=ClipboardPlus}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=ClipboardOff}" Cursor="Hand" />
                                <ToggleButton Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" x:Name="BtnDelete" Click="BtnDelete_Click" Height="40" Width="40" Style="{StaticResource MaterialDesignActionToggleButton}" ToolTip="删除" Content="{md:PackIcon Kind=DeleteEmptyOutline}" md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=DeleteOffOutline}" Cursor="Hand" />
                                <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" x:Name="LvClipboard" Height="500" Margin="0,10,0,0"
                                      PreviewMouseMove="LvClipboard_OnPreviewMouseMove" Drop="LvClipboard_OnDrop" AllowDrop="True" MouseDoubleClick="LvClipboard_MouseDoubleClick">
                                </ListView>
                                <TextBlock  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" TextWrapping="Wrap" Margin="0,10,0,0">quiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA</TextBlock>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <!--剪贴板-结束-->
                    <!--语言设置-开始-->
                    <TabItem Width="48" Height="48">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <md:PackIcon  Width="24" Height="24" HorizontalAlignment="Center" Kind="Translate" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="12">
                            <TextBlock Margin="0,0,0,8" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="{DynamicResource btn_Language}" />
                            <ScrollViewer Height="610" Width="395">
                                <StackPanel Margin="0,0,12,0">
                                    <GroupBox Header="系统设置" Margin="0,0,0,0">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource btn_Language_label}" Grid.ColumnSpan="2" />
                                            <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" x:Name="cbLanguage" DisplayMemberPath="title" SelectedValuePath="id" IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}" md:HintAssist.Hint="Language"/>
                                            <Label Grid.Row="1" Grid.Column="0" Content="剪贴板密码" Grid.ColumnSpan="2" Margin="0,15,0,0"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtClipboardPassword" Margin="0,15,0,0" MaxLength="32" md:HintAssist.Hint="Password"></TextBox>
                                            <Label Grid.Row="2" Grid.Column="0" Content="开机启动" Grid.ColumnSpan="2" Margin="0,15,0,0"/>
                                            <RadioButton Grid.Row="2" Grid.Column="1" x:Name="rbStart1" Content="是" Style="{StaticResource MaterialDesignRadioButton}" IsChecked="True" Margin="0,10,0,0"/>
                                            <RadioButton Grid.Row="2" Grid.Column="3" x:Name="rbStart2" Content="否" Style="{StaticResource MaterialDesignRadioButton}" Margin="0,10,0,0"/>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="截图"  Margin="0,5,0,0">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                                <RowDefinition FrameworkElement.FlowDirection="RightToLeft"/>
                                            </Grid.RowDefinitions>
                                            <!--全屏截图-->
                                            <Label Grid.Row="0" Grid.Column="0" Content="截图" />
                                            <CheckBox Grid.Row="0" Grid.Column="1" x:Name="cbScreenCaptureCtrl" IsChecked="False" Content="Ctrl" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="0" Grid.Column="2" x:Name="cbScreenCaptureAlt" IsChecked="True" Content="Alt" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="0" Grid.Column="3" x:Name="cbScreenCaptureShift" IsChecked="True" Content="Shift" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <TextBox Grid.Row="0" Grid.Column="4" x:Name="txtScreenCaptureKey" md:HintAssist.Hint="Key" Text="A" KeyUp="Txt_KeyUp"/>
                                            <!--截图-->
                                            <Label Grid.Row="1" Grid.Column="0" Content="截图" />
                                            <CheckBox Grid.Row="1" Grid.Column="1" x:Name="cbLastCtrl" IsChecked="False" Content="Ctrl" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="1" Grid.Column="2" x:Name="cbLastAlt" IsChecked="True" Content="Alt" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="1" Grid.Column="3" x:Name="cbLastShift" IsChecked="True" Content="Shift" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <TextBox Grid.Row="1" Grid.Column="4" x:Name="txtLastKey" md:HintAssist.Hint="Key" Text="S" KeyUp="Txt_KeyUp"/>
                                            <!--截图对比-->
                                            <Label Grid.Row="2" Grid.Column="0" Content="截图对比" />
                                            <CheckBox Grid.Row="2" Grid.Column="1" x:Name="cbDiffCtrl" IsChecked="False" Content="Ctrl" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="2" Grid.Column="2" x:Name="cbDiffAlt" IsChecked="True" Content="Alt" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <CheckBox Grid.Row="2" Grid.Column="3" x:Name="cbDiffShift" IsChecked="True" Content="Shift" Style="{StaticResource MaterialDesignLightCheckBox}" />
                                            <TextBox Grid.Row="2" Grid.Column="4" x:Name="txtDiffKey" md:HintAssist.Hint="Key" Text="D" KeyUp="Txt_KeyUp"/>
                                            <Label Grid.Row="3" Grid.Column="0" Content="对比窗体标题" />
                                            <TextBox Grid.Row="3" Grid.Column="1"  Grid.ColumnSpan="4" x:Name="ScreenCaptureTitle" md:HintAssist.Hint="Key" Text="A" />
                                            <Label Grid.Row="4" Grid.Column="0" Content="透明度" />
                                            <Slider Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" x:Name="ScreenCaptureOpacity" Value="40" Minimum="30" Maximum="100" Style="{StaticResource MaterialDesignDiscreteSlider}" TickFrequency="{Binding DiscreteHorizontal.TickFrequency}" TickPlacement="BottomRight" />
                                            <TextBlock  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="5" TextWrapping="Wrap" Margin="0,10,0,0">quiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaquiaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA</TextBlock>
                                        </Grid>
                                    </GroupBox>
